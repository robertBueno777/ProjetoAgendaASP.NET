<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoAgenda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoAgenda.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <style>
        .lora-<uniquifier > {
            font-family: "Lora", serif;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
        }
    </style>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3"
             style="height: 120px; background-image: url('/images/Gemini_Generated_Image_lly51klly51klly5.jfif'); background-size: cover; background-position: center;">
            <div class="container-fluid">
                <a class="navbar-brand text-black" asp-area="" asp-controller="Usuario" asp-action="Index" style="background-color: white;border: 2px solid black  ; border-radius: 8px; align-items: center;text-align:center; font-size: 25px; height: 50px; width: 250px">
                    <strong> Projeto Agenda 📅 </strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="background-color: white; border-radius: 8px;border: 2px solid black  ">
                            <a class="nav-link text-black" asp-area="" asp-controller="Usuario" asp-action="Index"><strong>Home</strong></a>
                        </li>
                        <li class="nav-item" style=" border-radius: 8px;">
                            <p>
                                ..
                            </p>
@*                             <a class="nav-link text-blue" asp-area="" asp-controller="" asp-action=" ">  </a>
 *@                        </li>
                        <li class="nav-item" style="background-color: white; border-radius: 8px;border: 2px solid black   ">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Privacy"><strong>Política</strong></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="card shadow-lg border-0 rounded-1" style="background-color: lightgrey;">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProjetoAgenda - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript"  src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
