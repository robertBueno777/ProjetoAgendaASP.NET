@model List<Usuario>;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center p-4 mb-4 rounded shadow" style="font-family: 'Inter', sans-serif; font-size: 48px; font-weight: 700; color: black; background: linear-gradient(to right, #e0e0e0, #ffffff); border: 2px solid black;">
    Agenda de Clientes
</div>

@if (Model != null && Model != null && Model.Any())
{


    <table id="tabelaContatos" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Usuário Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Data de nascimento</th>
                <th scope="col">Contato</th>
                <th scope="col"> </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@usuario.IdUsuario</td>
                    <td>@usuario.NomeUsuario</td>
                    <td>@usuario.EmailUsuario</td>
                    <td>@usuario.DataNascimentoUsuario</td>
                    <td>nada_por_enquanto</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <button class="btn btn-danger" type="button">Apagar</button>
                            <button class="btn btn-success" type="button">Editar</button>
                            <button class="btn btn-secondary" type="button">Visualizar contato</button>
                            <button class="btn btn-warning" type="button">Add celular</button>

                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
<div style="display: flex; justify-content: center; align-items: center; ">
    <a asp-controller="Usuario" asp-action="CadastrarContato" class="btn btn-success" style="width: 300px; text-align: center;">Cadastrar Contato</a>
</div>

@section Scripts {
    <script>
         $(document).ready( function () {
            $('#tabelaContatos').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese.json"}
            });
        } );
    </script>
}